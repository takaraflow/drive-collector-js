{
  "name": "drive-collector-bot",
  "version": "4.12.0",
  "description": "A modular Telegram bot for transferring files to Rclone remotes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "sync:env": "node scripts/sync-env.js",
    "start": "npm run sync:env && cross-env NODE_MODE=all node index.js",
    "start:dispatcher": "npm run sync:env && cross-env NODE_MODE=dispatcher node index.js",
    "start:processor": "npm run sync:env && cross-env NODE_MODE=processor node index.js",
    "dev": "npm run sync:env && cross-env NODE_MODE=dev node --watch --watch-path=src --watch-path=index.js index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:perf": "node scripts/test-performance.js",
    "test:perf:report": "node scripts/test-performance.js --report",
    "test:fast": "node --experimental-vm-modules node_modules/jest/bin/jest.js --maxWorkers=50%",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='!(integration)' --maxWorkers=75%",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='integration' --maxWorkers=50%",
    "test:optimized": "node --experimental-vm-modules node_modules/jest/bin/jest.js --maxWorkers=100%",
    "test:full-optimized": "cross-env NODE_OPTIONS=--max-old-space-size=8192 node --experimental-vm-modules node_modules/jest/bin/jest.js --maxWorkers=100%",
    "release": "npm test && standard-version",
    "release:patch": "npm test && standard-version --release-as patch",
    "release:minor": "npm test && standard-version --release-as minor",
    "release:major": "npm test && standard-version --release-as major",
    "postrelease": "git push --follow-tags origin main",
    "release:ai": "npm test && node scripts/release-ai.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "rclone",
    "mega",
    "drive"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/lib-storage": "^3.958.0",
    "@axiomhq/js": "^1.3.1",
    "@infisical/sdk": "^4.0.6",
    "@upstash/qstash": "^2.0.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "p-queue": "^8.0.1",
    "telegram": "^2.22.2"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "standard-version": "^9.5.0"
  }
}
